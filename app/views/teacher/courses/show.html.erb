
<div class="row-fluid"  ng-controller="teacherCtrl">
  <div class="span6">
    <div style="margin: 10px">
      <ul class="nav nav-pills">
        <li><a href="#up_handout" data-toggle="modal">课件添加</a></li>
        <li><a href="#myModal" data-toggle="modal">添加作业</a></li>
      </ul>
    </div>
    <hr> 
    <h3>作业仪表</h3>
    <hr>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>作业名称</th>
          <th>作业进度</th>
          <th>操作</th> 
        </tr>
      </thead>
      <tbody>
        <% @course.works.each do |work| %>
        <tr>
          <td><%= work.title %></td>
          <td>
            <div class="progress progress-striped active">
              <div class="bar" style="width: <%= work.submit_percentage.to_s %>%;"></div>
            </div>
          </td>
          <td>
            <a href="#" ng-click="show('<%= work.id %>', '<%= work.title %>', '<%= work.course.id %>')">进入</a>
          </td>
          <% end %>
        </tbody>
    </table>
  </div>
    <div class="span6">
      <h3>作业详情</h3>
      <hr>
      <div>
        <h4>{{ courseName }}</h4>
        <hr>
        <div>
          <%= render "works" %>
        </div>  
      </div>
  </div>
</div>

<%= render "madal" %>
<%= render "up_handout" %>