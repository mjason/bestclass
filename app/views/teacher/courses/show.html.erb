
<div class="row-fluid">
  <div class="span6">
    <h3>作业仪表</h3>
    <hr>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>作业名称</th>
          <th>作业进度</th>
          <th>操作</th> 
        </tr>
      </thead>
      <tbody>
        <% @course.works.each do |work| %>
        <tr>
          <td><%= work.title %></td>
          <td>
            <div class="progress progress-striped active">
              <div class="bar" style="width: <%= work.submit_percentage.to_s %>%;"></div>
            </div>
          </td>
          <td>link</td>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="span6">
      <h3>作业详情</h3>
      <hr>
    </div>
  </div>